<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    >

    <LinearLayout
        android:id="@+id/item_answer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_answer_isBest"
            android:text="解决问题/最佳答案"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible"
            android:textColor="@color/red"
            android:background="@color/material_grey_300"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_answer_content"
            android:text="详细的答案"

            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="作者"
            android:id="@+id/item_answer_author"
            android:gravity="right"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日期"
            android:id="@+id/item_answer_date"
            android:gravity="right"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:id="@+id/item_answer_edit"
                android:text="编辑"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/textview_sharp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/item_answer_delete"
                android:text="删除"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/textview_sharp"/>
            <TextView
                android:id="@+id/item_answer_approve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="赞一下"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/textview_sharp"
                />
            <TextView
                android:id="@+id/item_answer_vote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/textview_sharp"/>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>